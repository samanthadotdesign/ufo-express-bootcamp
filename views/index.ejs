<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" type="text/css" />
    <title>UFO Sightings Directory</title>
  </head>
  <body>
    <div class="content">
      <%- include('../templates/header'); -%>
      <div class="wrapper">
        <div class="table">
          <div class="row header">
            <div class="cell cell-header">
              Date
              <div class="tooltip">
                <a href="/?sort=<%= toggle.value %> " class="icon-sort"
                  ><%= toggle.icon %>
                  <span class="tooltip-text tooltip-below"
                    ><%= toggle.tooltip %>
                  </span></a
                >
              </div>
            </div>
            <div class="cell cell-header">Shape</div>
            <div class="cell cell-header">Observation</div>
            <div class="cell cell-header">Weather</div>
            <div class="cell cell-header">Location</div>
            <div class="cell cell-header">Summary</div>
          </div>

          <% sightings.forEach((sightingObj,i) => { %>
          <!-- How do you add the link for the whole row -->
          <div class="row entry">
            <div class="cell" data-title="Date">
              <a href="/sighting/<%= i %>"><%= sightingObj.date_time %></a>
            </div>
            <div class="cell" data-title="Shape"><%= sightingObj.shape %></div>
            <div class="cell" data-title="Observed">
              <%= sightingObj.observed %>
            </div>
            <div class="cell" data-title="Weather">
              <%= sightingObj.weather %>
            </div>
            <div class="cell" data-title="Location">
              <%= sightingObj.location %>
            </div>
            <div class="cell" data-title="Summary">
              <%= sightingObj.summary %>
            </div>
          </div>

          <% }); %>
        </div>
      </div>
    </div>
    <footer>
      <div class="footer-div">
        <div class="tooltip">
          <a href="/tile" class="button">ðŸ‘¾</a>
          <span class="tooltip-text tooltip-top">Tile view</span>
        </div>
      </div>
    </footer>
  </body>
</html>
